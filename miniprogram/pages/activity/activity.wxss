page{
  background: #FFF;
  font-family:PingFangSC-Medium;
  height: 100%;
  width: 100%; 
}
.ubox{
  position: relative;
}
.rtu{
  width: calc(100% - 200rpx);
  height: 100%;
  float: left;
  margin-left: 48rpx;
}
.lunbo{
  width: 100%;
  height: 400rpx;
  box-sizing: content-box;
  padding-top: 32rpx;
}
.lunbo image{
  width: 690rpx;
  height: 400rpx;
  box-sizing: border-box;
  background: pink;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  border-radius: 8rpx;
}
.upl{
  display: inline-block;
  position: absolute;
  top: 368rpx;
  left: 50rpx;
  width:198rpx;
  height:50rpx;
  background:rgba(39,42,56,1);
  border-radius:25rpx;
  opacity:0.4;
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  line-height: 50rpx;
  color: #fff;
  text-align: center;
  letter-spacing: 1rpx;
}
.utup{
  height: 135rpx;
  width: 100%;
  position: relative;
}
.utup view:nth-of-type(1){
  height: 66rpx;
  margin-top: 40rpx;
  line-height: 66rpx;
  font-size:48rpx;
  font-family:PingFangSC-Semibold;
  font-weight:600;
  color:rgba(39,42,56,1);
  text-indent: 38rpx;
}
.utup view:nth-of-type(2){
  height: 34rpx;
  margin-top: 20rpx;
  background-size: 24rpx 29rpx;
  background-position: 40rpx center;
  line-height: 34rpx;
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(151,154,159,1);
  width: 666rpx;
  margin-left: 40rpx;
}
.uact{
  position: relative;
  width: 100%; 
  border-top: solid 22rpx rgba(247,247,247,1);
  box-sizing: border-box;
}
.uactit{
  height: 50rpx;
  line-height: 50rpx;
  width: 100%;
  text-indent: 94rpx;
  margin: 50rpx 0 50rpx;
  font-size:36rpx;
  font-family:PingFangSC-Semibold;
  font-weight:600;
  color:rgba(39,42,56,1);
  background: url(https://link-imgs.oss-cn-hangzhou.aliyuncs.com/wx_small/activity/open.png) no-repeat 40rpx center;
  background-size: 40rpx 40rpx;
}
.uall{
  width: 100%;
  height: 120rpx;
  position: fixed;
  background: #FFC738;
  color: #fff;
  text-align: center;
  line-height: 120rpx;
  font-size:32rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  bottom: 0;
}
.uall span{
  display: inline-block;
  width: 36rpx;
  height: 36rpx;
  background: url(https://link-imgs.oss-cn-hangzhou.aliyuncs.com/wx_small/activity/clock.png) no-repeat center;
  right: 58rpx;
  top: 40rpx;
  position: absolute;
  background-size: 40rpx 40rpx;
}
.imgbg{
  display: none;
}
.imgbgg{
  display: block;
  width: 100%;
  height: 100%;
  background: #000;
  position: fixed; 
}
.bggb{
  width: 100%;
  height: 100%;
}
.bggb image{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  width: 700rpx;
}
.prema{
  display: inline-block;
  position: fixed;
  background: #272A38;
  border-radius: 50%;
  width: 120rpx;
  height: 120rpx;
  color: #fff; 
  bottom: 106rpx;
  right: 40rpx;
  z-index: 99;
}
.prema cover-view:nth-of-type(1){
  font-size:24rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  line-height: 34rpx;
  height: 34rpx;
  margin-top: 28rpx;
  z-index: 99;
  text-align: center;
}
.prema cover-view:nth-of-type(2){
  font-size:24rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  line-height: 34rpx;
  height: 34rpx;
  z-index: 99;
  text-align: center;
}
.ucontent{
  width:640rpx;
  margin: 0 auto;
  font-size:26rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(39,42,56,0.7);
  line-height:42rpx;
  padding-bottom: 210rpx;
}
.uactit span{
  height:50px;
  font-size:48rpx;
  font-family:FT;
  color:rgba(255,102,102,1);
  line-height: 50rpx;
  float: right;
  margin-right: 48rpx;
}