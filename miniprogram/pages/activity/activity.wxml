<view class='ubox' hidden='{{!nono}}'>
  <view hidden='{{bgbg}}'>
  <swiper class='lunbo' autoplay='true' interval='3000' circular='true'>
    <swiper-item bindtap="fullpage" wx:key="index" wx:for="{{pbox.lun}}" data-index="{{index}}"><image src='{{item}}'></image></swiper-item>
  </swiper>
  <view class='upl'>查看课程图片</view>
  <view class='utup'>
    <view>{{title}}</view>
    <!-- <view>{{'仅售18.88元，价值670元「预售」一对一泰拳私教，节假日通用'}}</view> -->
  </view>
  <view class='uact'>
    <view class='uactit'>课程活动<span>￥{{plpr}}</span></view>
    <view class='ucontent'><text>{{ptttp}}</text></view>
    <view class='uall' bindtap='call'>预约课程<span></span></view>
  </view>
  </view>
</view>
<view class='{{bg?"imgbg":"imgbgg"}}'>
  <swiper class='bggb' current="{{current}}" circular='true'>
    <swiper-item bindtap="fullno" wx:key="index" wx:for="{{pbox.lun}}"><image src='{{item}}' mode="widthFix"></image></swiper-item>
  </swiper>
</view>
