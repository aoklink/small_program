.ubox{
  width:100%;
  height:314rpx;
  background: linear-gradient(90deg,rgba(29,35,45,1) 0%,rgba(47,56,72,1) 100%);
  box-shadow:0rpx 4rpx 42rpx 0rpx rgba(23,31,45,0.09);
  box-sizing: border-box;
  padding: 38rpx 0 42rpx 46rpx;
}
.uba{
  height: 130rpx;
  width: 100%;
  box-sizing: border-box;
}
.ubb{
  height: 60rpx;
  width: 160rpx;
  box-sizing: border-box;
  border: 1rpx solid #fff;
  margin-top: 44rpx;
  color: #fff;
  font-size: 24rpx;
  text-align: center;
  line-height: 60rpx;
  letter-spacing: 2rpx;
  border-radius: 30rpx;
}
.tou{
  float: left;
  width: 130rpx;
  height: 130rpx;
  box-sizing: border-box;
  background: yellow;
  border: 8rpx silid #fff;
  border-radius: 50%;
  margin-left: 16rpx;
}
.rtu{
  width: calc(100% - 200rpx);
  height: 100%;
  float: left;
  margin-left: 48rpx;
}
.ruu{
  height: 44rpx;
  width: 100%;
  margin-top: 22rpx;
  color: #fff;
  font-size:32rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  display: inline-block;
}
.rdd{
  width: 100%;
  height: 34rpx;
  display: inline-block;
  background: yellow;
  margin-top: 14rpx;
}
.dbox{
  width: 100%;
  padding-left: 38rpx;
  box-sizing: border-box; 
  margin-top: 4rpx;
}
.ss{
  width: 100%;
  height: 118rpx;
  border-bottom: 1rpx solid rgba(50,58,74,0.1);
  box-sizing: border-box;
  line-height: 118rpx;
  font-size: 28rpx;
}
.ss view:nth-of-type(1){
  float: left;
  margin-left: 92rpx;
  display: inline-block;
}
.ss view:nth-of-type(2){
  float: right;
  margin-right: 62rpx;
  display: inline-block;
}